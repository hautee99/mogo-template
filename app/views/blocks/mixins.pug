mixin storyItem(src ="../images/img-blog1.png", dateNumber = "15", dateText = "Jan", title = "Lorem, ipsum dolor sit amet consectetur adipisicing elit", desc= "Lorem, ipsum dolor sit amet consectetur adipisicing elit. Itaque sapiente harum repellendus tenetur deserunt illum vero cumque, dignissimos adipisci amet, optio perspiciatis rerum deleniti officiis sed odio, corrupti cum pariatur?story-meta ", view = 1000, comment= 100)
     li.story-item
        .story-media 
            img.story-image(src= src)
            .story-date
                    span.story-date-number= dateNumber
                    span.story-date-text.text.text-light= dateText
        h3.story-title= title
        .story-desc.text
          p.story-desc-inner= desc
        .story-meta
          .story-meta-item 
                  i.fa.fa-eye.story-meta-icon 
                  span.story-meta-number.text= view
          .story-meta-item 
                  i.fa.fa-comment.story-meta-icon 
                  span.story-meta-number.text= comment
